                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="126.0">
                     <children>
                        <Label text="Due Date" />
                        <DatePicker fx:id="searchDueDate" prefHeight="27.0" prefWidth="123.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Category" />
                        <ComboBox fx:id="categoryComboBox" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Status" />
                        <ComboBox fx:id="statusComboBox" prefWidth="150.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <TableView fx:id="todoListTableView" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="dueDateColumn" prefWidth="103.0" text="Due Date" />
                <TableColumn fx:id="todoColumn" prefWidth="147.0" text="Title" />
                  <TableColumn fx:id="descColumn" prefWidth="149.5" text="Description" />
                  <TableColumn fx:id="priorityColumn" prefWidth="77.5" text="Priority" />
                  <TableColumn fx:id="categoryColumn" prefWidth="82.0" text="Category" />
